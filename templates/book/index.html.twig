{% extends 'base.html.twig' %}

{% block title %}Reservation
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h2>Reservation</h2>


				{{ form_start(bookForm) }}
				{{ form_row(bookForm.dateReservation) }}
				{{ form_row(bookForm.hourDejeuner, {'attr': {'class': 'hour-choice'}}) }}

				{{ form_row(bookForm.hourDinner, {'attr': {'class': 'hour-choice'}}) }}

				{{ form_row(bookForm.numberPeople) }}
				{{ form_row(bookForm.civility) }}
				{{ form_row(bookForm.firstname) }}
				{{ form_row(bookForm.name) }}
				{{ form_row(bookForm.phone) }}
				{{ form_row(bookForm.email) }}
				{{ form_row(bookForm.allergy) }}
				{{ form_row(bookForm.RGPDConsent) }}

				<button type="submit" class="btn btn-primary">RÃ©server</button>
				{{ form_end(bookForm) }}

			</div>
		</div>
	</section>

	<style>
		.hour-choice.selected {
			background-color: gray;
		}
	</style>
	<script>
		const hourChoices = document.querySelectorAll('.hour-choice');

hourChoices.forEach(choice => {
choice.addEventListener('change', event => {
hourChoices.forEach(otherChoice => {
if (otherChoice !== choice) {
otherChoice.value = '----';
otherChoice.classList.remove('selected');
}
});
choice.classList.add('selected');
});
});
	</script>
{% endblock %}
