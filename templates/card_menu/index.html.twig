{% extends 'base.html.twig' %}

{% block title %}Carte et Menu
{% endblock %}
{% block body %}
	<div class="containerPrincipal">
		<h2 class="histoire-title">Savourez nos délicieux plats faits maison, inspiré par le chef Arnaud Michant</h2>

		<span class="separateur"><img src="assets/pictures/separateur.png" alt="séparateur"></span>

		{% for category in categories %}
			<span class="titre-category-name">
				<h2 class="histoire-title">{{category.name}}</h2>
			</span>

			{% for flat in category.flats %}

				<div class="flat-item">

					<span class="flat-name">{{ flat.name }}</span>

					<span class="flat-price">{{ flat.price }}€<span></div>

						<span class="flat-description">{{ flat.description }}</span>

					{% endfor %}
				{% endfor %}
				<span class="titre-category-name">
					<h2 class="histoire-title">Découvrez nos menus variés pour tous les goûts</h2>
				</span>

				<div class="menu-container">

					{% for menu in menus %}
						<div class="cardMenu">
							<h5 class="titreMenu">Menu
								{{ menu.name }}*</h5>
							<br>
							{% if menu.id == 1 %}
								<h6>Burger + Dessert</h6>
								<p>Où</p>
								<h6>Plat + Dessert</h6>
							{% elseif menu.id == 2 %}
								<h6>Pizza + Boisson</h6>
								<p>Quand</p>
								<h6>Entrée + Plat + Dessert</h6>
							{% else %}
								<h6>Plat + Boisson</h6>
								<p>Comment</p>
								<h6>Entrée + Plat</h6>
							{% endif %}
							<p>*{{ menu.description }}</p>
							<p>prix :
								{{ menu.price }}
								€</p>
						</div>
					{% endfor %}


				</div>
				{#
																																																																																							<div class="col-12">
																																																																																								<h3>Nos menus</h3>
