{% extends 'base.html.twig' %}

{% block title %}Carte et Menu
{% endblock %}

{% block body %}
	<main class="container">
		<h2>Carte & Menu</h2>
		<br>
		<h3>Notre carte</h3>
		<main class="col-12">
			<section class="row">
				{% for category in categories %}
					<div class="col-12">
						<div class="card-body">
							<h5 class="card-title">{{category.name}}</h5>
							{% for flat in category.flats %}
								<p>
									Nom du plat :
									{{flat.name}}
									<br>
									Description du plat :
									{{flat.description}}
									<br>
									Prix :
									{{flat.price}}
									€
								</p>
							{% endfor %}
						</div>
					</div>
				{% endfor %}


				<h3>Nos menus</h3>
				{% for menu in menuExpress %}
					<div class="col-12">
						<div class="card-body">
							<h5 class="card-title">Menu
								{{menu.name}}</h5>
							<p>description du menu :
								{{menu.description}}
							</p>
							<h6>Burger + Dessert</h6>
							<h6>Où</h6>
							<h6>Plat + Dessert</h6>
							<p>
								prix :
								{{menu.price}}
								€
							</p>
						</div>
					</div>
				{% endfor %}

				{% for menu in menuSavoyard %}
					<div class="col-12">
						<div class="card-body">
							<h5 class="card-title">Menu
								{{menu.name}}</h5>
							<p>description du menu :
								{{menu.description}}
							</p>
							<h6>Entrées au choix :
								{% for flat in flatSalad %}
									{{flat.name}}
								{% endfor %}
							</h6>
							<h6>Plats au choix :
								{% for flat in flatFlat %}
									{{flat.name}}
								{% endfor %}
							</h6>
							<h6>Dessert au choix :
								{% for flat in flatDessert %}
									{{flat.name}}
								{% endfor %}
							</h6>
							<p>
								prix :
								{{menu.price}}
								€
							</p>
						</div>
					</div>
				{% endfor %}

				{% for menu in menuComplet %}
					<div class="col-12">
						<div class="card-body">
							<h5 class="card-title">Menu
								{{menu.name}}</h5>
							<p>description du menu :{{menu.description}}
							</p>
							<h6>Entrée au choix</h6>
							<h6>Burger où Plat au choix</h6>
							<h6>Fromage au choix</h6>
							<h6>Dessert au choix</h6>
							<p>
								prix :
								{{menu.price}}
								€
							</p>
						</div>
					</div>
				{% endfor %}

			</div>

			<button class="btn btn-lg btn-primary mt-3" type="submit">
				Reserver une table
			</button>
			<div class="col-12 mt-3 mb-3">
				<h5 class="card-title">Heure et jour d'ouverture</h5>
				{% for hour in hours %}
					<p class="card-text">Jour :
						{{hour.dayWeek|date('d/m/Y')}}
						<br>
						Heure d'ouverture :
						{{hour.openingTime|date('H:i')}}
						<br>
					</p>
				{% endfor %}
			</div>
		</div>
	</section>
</main></main>{% endblock %}
