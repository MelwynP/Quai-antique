{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Le Quai Antique | Chambéry</h1>
			</div>
			<div class="col-12 mt-5">
				<h2>Vos plats préféres, cuisinés avec soin et passion</h2>
				<br>
				<h4>Vos salades préférés</h4>
			</div>
			{% for flat in saladPrefer %}
				<div class="col-6 mt-2">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ flat.name }}</h5>
							{% if flat.getphoto() is not null %}
								<img src={{ flat.getPhoto().getImage() }} class="card-img-top">
							{% endif %}
							<p class="card-text">{{ flat.description }}</p>
						</div>
					</div>
				</div>
			{% endfor %}

			<div class="col-12 mt-5">
				<h4>Vos plats préférés</h4>
			</div>
			{% for flat in flatPrefer %}
				<div class="col-6 mt-2">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{flat.name}}</h5>
							{% if flat.getphoto() is not null %}
								<img src={{ flat.getPhoto().getImage() }} class="card-img-top">
							{% endif %}
							<p class="card-text">{{flat.description}}</p>
						</div>
					</div>
				</div>
			{% endfor %}

			<div class="col-12 mt-5">
				<h4>Vos fromages préférés</h4>
			</div>
			{% for flat in cheesePrefer %}
				<div class="col-6 mt-2">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{flat.name}}</h5>
							{% if flat.getphoto() is not null %}
								<img src={{ flat.getPhoto().getImage() }} class="card-img-top">
							{% endif %}
							<p class="card-text">{{flat.description}}</p>
						</div>
					</div>
				</div>
			{% endfor %}

			<div class="col-12 mt-5">
				<h4>Vos desserts préférés</h4>
			</div>
			{% for flat in dessertPrefer %}
				<div class="col-6 mt-2">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{flat.name}}</h5>
							{% if flat.getPhoto() is not null %}
								<img src={{ flat.getPhoto().image() }} class="card-img-top">
							{% endif %}
							<p class="card-text">{{flat.description}}</p>
						</div>
					</div>
				</div>
			{% endfor %}

			{# Reserver une table lien #}
			<a href="{{ path('app_book') }}" class="mt-3 mb-5 btn btn-primary">Reserver une table</a>


			<div class="col-12 mt-2">
				<h3>Nos horaires</h3>
				<br>
				{% for hour in dayClose %}
					<p class="row">Fermé le :
						{{hour.dayweek}}</p>
				{% endfor %}
				{% for hour in dayOpen %}
					<p class="row">Ouvert le :
						{{hour.dayweek}}
						de
						{{hour.lunchOpeningTime|date('H\\hi')}}
						à
						{{hour.lunchClosingTime|date('H\\hi')}}
						et le soir de
						{{hour.dinnerOpeningTime|date('H\\hi')}}
						à
						{{hour.dinnerClosingTime|date('H\\hi')}}
					</p>
				{% endfor %}
				<br>
			</div>
		</section>
	</main>
{% endblock %}
