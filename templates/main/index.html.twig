{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Le Quai Antique | Chambéry</h1>
			</div>
			<div class="col-12 mt-5 ms-5">
				<h2>Vos plats preférez</h2>
			</div>
			{% for flat in flats %}
				{% for photo in photos %}
					<div class="col-6 mt-5">
						<div class="card" style="width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{flat.name}}</h5>
								<h6 class="card-subtitle mb-2 text-muted mt-3">{{flat.price}}€</h6>
								<img src={{photo.image}} class="card-img-top" alt="...">
								<p class="card-text">Some quick example text to build on the card title and make up.</p>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endfor %}
			<button class="btn btn-lg btn-primary mt-3" type="submit">
				Reserver une table
			</button>
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">Heure et jour d'ouverture</h5>
					{% for hour in hours %}
						<p class="card-text">Jour :
							{{hour.dayWeek|date('d/m/Y')}}
							<br>
							Heure d'ouverture :
							{{hour.openingTime|date('H:i')}}
							<br>
						{% endfor %}


					</div>
				</div>

			</div>
		</section>
	</main>
{% endblock %}
