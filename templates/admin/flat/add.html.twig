{% extends "base.html.twig" %}

{% block title %}Administration des plats
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Ajouter un plat</h1>
				{{ form_start(flatFormulaire) }}
				{{ form_row(flatFormulaire.name) }}
				{{ form_row(flatFormulaire.description) }}
				{{ form_row(flatFormulaire.price) }}
				{{ form_row(flatFormulaire.category) }}
				{{ form_row(flatFormulaire.menu) }}
				{{ form_row(flatFormulaire.images) }}
				<button class="btn btn-primary">Ajouter</button>
				{{ form_end(flatFormulaire) }}
			</div>
		</section>
	</main>
{% endblock %}
