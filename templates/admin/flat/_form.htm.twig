{% if app.request.attributes.get('_route') == 'admin_flat_edit' %}
	<h2>Images</h2>
	{% for image in flat.images %}
		<div>
			<img src="{{ asset('assets/uploads/flats/mini/300x300-' ~ image.name ) }}" alt="Image" width="150">
			<a href="{{ path('admin_flat_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
		</div>
	{% endfor %}
{% endif %}

